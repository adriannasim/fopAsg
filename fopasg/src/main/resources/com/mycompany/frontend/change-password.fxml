<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.frontend.ChangePasswordController">
   <children>
      <Pane fx:id="pane" prefHeight="500.0" prefWidth="720.0" style="-fx-background-color: #ffffff;" stylesheets="@css/style.css">
         <children>
            <Label layoutX="261.0" layoutY="125.0" text="Change Password">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label layoutX="134.0" layoutY="208.0" text="Old Password">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Text fx:id="oldPasswordMsg" layoutX="134.0" layoutY="263.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-background-color: #ffffff;" styleClass="errorMsg" wrappingWidth="208.0">
               <font>
                  <Font name="Roboto Bold" size="10.0" />
               </font>
            </Text>
            <Label layoutX="134.0" layoutY="265.0" text="New Password (At least 6 characters)">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Text fx:id="newPasswordMsg" layoutX="134.0" layoutY="320.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-background-color: #ffffff;" styleClass="errorMsg" wrappingWidth="208.0">
               <font>
                  <Font name="Roboto Bold" size="10.0" />
               </font>
            </Text>
            <Label layoutX="134.0" layoutY="322.0" text="Confirm New Password">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Text fx:id="confirmNewPasswordMsg" layoutX="134.0" layoutY="378.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-background-color: #ffffff;" styleClass="errorMsg" wrappingWidth="208.0">
               <font>
                  <Font name="Roboto Bold" size="10.0" />
               </font>
            </Text>
            <Button fx:id="submitBtn" layoutX="305.0" layoutY="404.0" mnemonicParsing="false" style="-fx-background-color: #9ABF80; -fx-background-radius: 20px;" text="Save" textFill="WHITE">
               <font>
                  <Font name="Roboto Bold" size="15.0" />
               </font>
               <padding>
                  <Insets bottom="8.0" left="40.0" right="40.0" top="8.0" />
               </padding>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </Pane>
      <Button fx:id="backButton" layoutX="28.0" layoutY="30.0" mnemonicParsing="false" style="-fx-background-color: #ffffff;" text="Back" textFill="#8f8f8f">
         <font>
            <Font name="Roboto" size="12.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
   </children>
</AnchorPane>
